<!--
1:1 resolution: 
based on 1920x1920
-->
<theme>

   <!--
   ///
   All Views: Defaults
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="help">
            <posDimmed>0.5 ${helpPos}</posDimmed>
            <pos>0.5 ${helpPos}</pos>
            <fontSize>${helpFontSize}</fontSize>
      </helpsystem>
      <image name="background-art">
         <pos>0.5 0.5</pos>
         <size>1.7777 1</size>
      </image>
   </view>

   <!--
   ///
   Variables
   ///
   -->

   <fontSize name="small">
      <variables>
         <systemDescriptionFontSize>0.020</systemDescriptionFontSize>
         <helpFontSize>0.016</helpFontSize>
         <helpPos>0.04</helpPos>
         <gamescountpos>0.08 0.95</gamescountpos>
         <gamesiconpos>0.075 0.95</gamesiconpos>
      </variables>
   </fontSize>
   <fontSize name="medium">
