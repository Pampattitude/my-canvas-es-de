      </variant>

      <variant name="
         carousel-textlist,
         carousel-carousel,
         carousel-grid,
         carousel-grid-detailed">
      <view name="system">
         <text name="games-count">
            <pos>0.463 ${gamescountpos}</pos>
         </text>
         <image name="gamesicon">
            <pos>0.458 ${gamescountpos}</pos>
            <size>0 ${systemDescriptionFontSize}</size>
