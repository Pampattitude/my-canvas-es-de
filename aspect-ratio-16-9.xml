<theme>

   <!--
   ///
   All Views: Defaults
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="help">
            <posDimmed>0.5 ${helpPos}</posDimmed>
            <pos>0.5 ${helpPos}</pos>
            <fontSize>${helpFontSize}</fontSize>
      </helpsystem>
      <image name="background-art">
         <pos>0.5 0.5</pos>
         <size>1 1</size>
      </image>
   </view>

   <!--
   ///
   Variables
   ///
   -->

      <view name="system">
         <text name="games-count">
            <size>0 ${systemDescriptionFontSize}</size>
            <fontSize>${systemDescriptionFontSize}</fontSize>
         </text>
      </view>

      <variant name="
         grid-textlist,
         grid-carousel,
         grid-grid,
         grid-grid-detailed">
         <view name="system">
            <text name="games-count">
               <pos>0.08 ${gamescountpos}</pos>
            </text>
            <image name="gamesicon">
               <pos>0.075 ${gamescountpos}</pos>
