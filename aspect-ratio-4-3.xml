            <helpsystem name="help">
                  <posDimmed>0.5 ${helpPos}</posDimmed>
                  <pos>0.25 ${helpPosSmall}</pos>
                  <fontSize>${helpFontSizeSmall}</fontSize>
                  <fontSizeDimmed>${helpFontSize}</fontSizeDimmed>
