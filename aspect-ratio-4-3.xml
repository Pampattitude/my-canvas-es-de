<theme>

   <!--
   ///
   All Views: Defaults
   ///
   -->
   <view name="system,gamelist">
      <image name="background-art">
         <pos>0.5 0.5</pos>
         <size>1.333333 1</size>
      </image>
   </view>
   <view name="system">
      <helpsystem name="help">
            <posDimmed>0.5 ${helpPos}</posDimmed>
            <pos>0.5 ${helpPos}</pos>
            <fontSize>${helpFontSize}</fontSize>
      </helpsystem>
   </view>

    <!--
   ///
   Help System Variantions:
   ///
   -->

    <variant name="
         grid-textlist,
         grid-carousel,
         grid-grid
         carousel-textlist,
         carousel-carousel,
         carousel-grid">
         <view name="gamelist">
            <helpsystem name="help">
                  <posDimmed>0.5 ${helpPos}</posDimmed>
                  <pos>0.5 ${helpPos}</pos>
                  <fontSize>${helpFontSize}</fontSize>
            </helpsystem>
         </view>
      </variant>
   <variant name="
         grid-grid-detailed,
         carousel-grid-detailed
         ">
