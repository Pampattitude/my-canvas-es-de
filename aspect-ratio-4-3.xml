   <!--
   ///
   Gamelist View: Carousel
   ///
   -->
   <variant name="carousel">
      <view name="gamelist">
        <carousel name="gamelistCarousel">
            <pos>0 -0.18</pos>
            <size>1.45 1.3</size>
			   <itemsBeforeCenter>${itemsBeforeCenter}</itemsBeforeCenter>
            <itemsAfterCenter>${itemsAfterCenter}</itemsAfterCenter>
            <itemSize>${itemSize}</itemSize>
            <itemScale>1.4</itemScale>
            <horizontalOffset>${horizOffset}</horizontalOffset>
            <fontSize>0.046</fontSize>
        </carousel>
      </view>
   </variant>
   <variant name="carousel-horizontal">
      <include>./_inc/systems/coversize-horizontal/${systemCoverSize}.xml</include>
      <view name="gamelist">
        <carousel name="gamelistCarousel">
            <itemSize>${gridItemSize}</itemSize>
            <pos>0 -0.1</pos>
            <fontSize>0.046</fontSize>
            <horizontalOffset>-0.23</horizontalOffset>
            <size>1 1</size>
            <itemScale>${horizitemScale}</itemScale>
            <maxItemCount>${horizitemscount}</maxItemCount>
            <selectedItemMargins>0.10 0.10</selectedItemMargins>
            <imageCornerRadius>0.005</imageCornerRadius>
            <imageFit>contain</imageFit>
        </carousel>
      </view>
   </variant>

