<!--
    Theme capabilities for Canvas-es-de
-->

<themeCapabilities>
   
   <themeName>Canvas</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>4:3</aspectRatio>
   <aspectRatio>19.5:9</aspectRatio>
   <aspectRatio>1:1</aspectRatio>

   <fontSize>small</fontSize>
   <fontSize>medium</fontSize>
   <fontSize>large</fontSize>
   <fontSize>x-large</fontSize>

   <colorScheme name="light">
      <label>Light</label>
   </colorScheme>
   <colorScheme name="dark">
      <label>Dark</label>
   </colorScheme>
   <colorScheme name="retro">
      <label>Retro</label>
   </colorScheme>
   <colorScheme name="neon">
      <label>Neon</label>
   </colorScheme>
   <colorScheme name="pastel">
      <label>Pastel</label>
   </colorScheme>
   <colorScheme name="sony">
      <label>Sony</label>
   </colorScheme>
   <colorScheme name="snes">
      <label>SNES</label>
   </colorScheme>
   <colorScheme name="famicom">
      <label>Famicom</label>
   </colorScheme>
      <colorScheme name="light-icon">
      <label>[Icon] Light</label>
   </colorScheme>
   <colorScheme name="dark-icon">
      <label>[Icon] Dark</label>
   </colorScheme>
   <colorScheme name="retro-icon">
      <label>[Icon] Retro</label>
   </colorScheme>
   <colorScheme name="neon-icon">
      <label>[Icon] Neon</label>
   </colorScheme>
   <colorScheme name="pastel-icon">
      <label>[Icon] Pastel</label>
   </colorScheme>
   <colorScheme name="sony-icon">
      <label>[Icon] Sony</label>
   </colorScheme>
   <colorScheme name="snes-icon">
      <label>[Icon] SNES</label>
   </colorScheme>
   <colorScheme name="famicom-icon">
      <label>[Icon] Famicom</label>
   </colorScheme>


   
   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>


   <variant name="grid-textlist">
      <label>[Grid] Textlist</label>
      <selectable>true</selectable>
   </variant>
   <variant name="grid-carousel">
      <label>[Grid] Carousel</label>
      <selectable>true</selectable>
   </variant>
   <variant name="grid-grid">
      <label>[Grid] Grid: Basic</label>
      <selectable>true</selectable>
   </variant>
   <variant name="grid-grid-detailed">
      <label>[Grid] Grid: Detailed</label>
      <selectable>true</selectable>
   </variant>
   <variant name="carousel-textlist">
      <label>[Carousel] Textlist</label>
      <selectable>true</selectable>
   </variant>
   <variant name="carousel-carousel">
      <label>[Carousel] Carousel</label>
      <selectable>true</selectable>
   </variant>
   <variant name="carousel-grid">
      <label>[Carousel] Grid: Basic</label>
      <selectable>true</selectable>
   </variant>
   <variant name="carousel-grid-detailed">
      <label>[Carousel] Grid: Detailed</label>
      <selectable>true</selectable>
   </variant>
</themeCapabilities>
